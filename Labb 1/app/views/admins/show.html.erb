<div>
  <h2>Users and keys</h2>

  <table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>E-mail</th>
            <th>Key</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.email %></td>
              <td><%= user.user_api_key.value %></td>
              <td><%= link_to 'Delete', api_user_path(user.id), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete user?"} %></td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>