<div>
  <br>
<%= link_to 'Logout', logout_admin_path, data: {no_turbolink: true}, class: "btn btn-danger btn-lg center" %>
  <br>
  <h2>Users and keys</h2>

  <table class="table table-hover">

        <% @users.each do |user| %>
            <tr>
              <td><h5>ID</h5><%= user.id %></td>
              <td><h5>E-mail</h5><%= user.email %></td>
              
              <% user.user_api_keys.each do |p| %>

              <td><h5>Key:</h5> <%= p.value %> <br> <%= link_to 'Delete ApiKey', adminApikeyD_path(p.id,p.api_user_id), :data => {:confirm => 'Are you sure?'}%></td>
        

        <% end %>
              
              <td><%= link_to 'Delete User', api_user_path(user.id), method: :delete, class: "btn btn-danger", data: { confirm: "do you want to remove this user and all api keys"} %></td>
            </tr>
        <% end %>

  </table>

</div>